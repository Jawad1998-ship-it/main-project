@page
@model Donation_Website.Pages.ViewTaskModel
@{
    ViewData["Title"] = "Volunteer Assignments";
}
<section class="container py-5">
    <h2 class="mb-4 text-center">Volunteer Assignments</h2>
    @if (!Model.Assignments.Any())
    {
        <p class="text-center text-muted">No tasks assigned yet.</p>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Volunteer Name</th>
                        <th>Project Title</th>
                        <th>Work Title</th>
                        <th>Role/Task</th>
                        <th>Status</th>
                        <th>Assigned Date</th>
                        <th>Hours</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var t in Model.Assignments)
                    {
                        <tr>
                            <td>@t.VolunteerName</td>
                            <td>@t.ProjectTitle</td>
                            <td>@t.WorkTitle</td>
                            <td>@t.RoleTask</td>
                            <td>
                                <span class="badge @(t.Status == "Completed" ? "bg-success" : "bg-warning text-dark")">@t.Status</span>
                            </td>
                            <td>@t.AssignDate.ToShortDateString()</td>
                            <td>@t.Hours</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</section>